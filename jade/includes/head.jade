//- head.jade
head
	
	// meta
	title #{title}
	meta(charset="utf-8")
	meta(http-equiv="X-UA-Compatible" content="IE=edge")
	meta(name="description" content="#{title}")
	meta(name="viewport" content="width=device-width, initial-scale=1")
	meta(name="theme-color" content="#98012e")

	// icons
	link(rel="apple-touch-icon" href="apple-touch-icon.png")
	link(rel="icon" type="image/png" href="favicon.png")

	// stylesheets
	link(rel="stylesheet" href="css/main.css" media="screen")
	link(rel="stylesheet" href="js/vendor/slick.js/slick/slick.css")
	link(rel="stylesheet" href="js/vendor/bootstrap/css/bootstrap.css")
	link(rel="stylesheet" href="js/vendor/pickadate/lib/compressed/themes/default.css")
	link(rel="stylesheet" href="js/vendor/pickadate/lib/compressed/themes/default.date.css")
	link(rel="stylesheet" href="js/vendor/pickadate/lib/compressed/themes/default.time.css")
	link(rel="stylesheet" href="css/responsive.css" media="screen")
	link(rel="stylesheet" href="css/print.css" media="print")

	// script
	script(src="js/vendor/modernizr/modernizr.js")